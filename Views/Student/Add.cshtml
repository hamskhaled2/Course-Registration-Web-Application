@model Student_information_system_2.Models.AddStudentViewModel

<h1>Add Student</h1>
<form method="post">
    <div class="mt-3">
        <label class="label-form">Name</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
        <label class="label-form">Phone Number</label>
        <input type="text" class="form-control" asp-for="phone" />
    </div>

    <div class="mt-3">
        <label class="label-form">Email</label>
        <input type="email" class="form-control" asp-for="email"/>
    </div>

    <div class="mt-3">
        <label class="label-form">Password</label>
        <input type="text" class="form-control" asp-for="password"/>
    </div>

    <div class="mt-3">
        <label class="label-form">Major</label>
        <input type="text" class="form-control" asp-for="major"/>
    </div>


    <div class="mt-3">
        <label class="label-form">Date of Birth</label>
        <input type="date" class="form-control" asp-for="dob" />
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-dark">Submit</button>
    </div>

</form>